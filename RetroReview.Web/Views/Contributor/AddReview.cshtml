@model RetroReview.Web.Models.AddReviewVM
@{
    ViewBag.Title = "AddReview";
}
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({ selector:'textarea' });</script>
<h2 style="color:azure">AddReview</h2>

<div class="col-md-12" style="background-color:azure ; padding:10px">
    @using RetroReview.Models.Models
	@using (Html.BeginForm("AddReview", "Contributor", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
        @Html.Hidden("GameReview.AuthorId", int.Parse(User.Identity.GetAuthorId().Remove(0,10)))
		<p>Add Review</p>
		<div>
			<div>
				@Html.TextBox("file", "", new { type = "file" })<br />
				<label>Game Title : </label> @Html.TextBoxFor(m => m.GameReview.Game.GameTitle) <br /><br />
				<label>Game ESRB Rating : </label> @Html.DropDownListFor(m => m.GameReview.Game.GameRatingId, Model.Ratings)<br /><br />
				<label>Game Platform: </label> @Html.DropDownListFor(m => m.GameReview.Game.PlatformId, Model.Platforms)<br /><br />
				<label>Game Release Year : </label> @Html.TextBoxFor(m => m.GameReview.Game.ReleaseYear)<br /><br /><br />
			</div>


			<div>
				<label>Review Title : </label>@Html.TextBoxFor(m => m.GameReview.ReviewTitle)<br /><br />
				<label style="color:red">Overall Rating : </label>@Html.TextBoxFor(m => m.GameReview.Rating)<br /><br />
				<label> Review Body : </label>@Html.TextAreaFor(m => m.GameReview.ReviewBody)<br /><br />
			</div>
		</div>
        
		<div class="col-md-12"><button class="btn btn-danger btn-block">Add Review</button></div>
	}

</div>